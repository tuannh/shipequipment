<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <title>@ViewBag.Title</title>
    @Html.CssBundle("~/css/product")
    @Html.JsBundle("~/js/default")
</head>
<body>
    <div id="body">
        <div class="main">
            <header class="top">
                <div class="contentTop">
                    <div class="logo"><a href="/"><img src="/images/thx/logo.png" alt="logo" /></a></div>
                    @{ Html.RenderPartial("~/Views/Shared/Partial/MiniShopcart.cshtml"); }
                    <!--Mini Shopping Cart End-->

                    <div class="clear2"></div>
                    @{ Html.RenderPartial("~/Views/Shared/Partial/SearchBox.cshtml"); }
                    <nav class="nav">
                        @Html.Controls().MenuNavigator()
                    </nav>
                    <!-- /Nav -->
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </header>
            <div class="content">
                <div class="filter">
                    <p class="link"><a href="#">Trang chủ</a><span>&gt;&gt;</span><a href="#">Sản phẩm</a><span>&gt;&gt;</span><a href="#">Lưỡi câu</a><span>&gt;&gt;</span><a href="#">Lưỡi đùm</a><span>&gt;&gt;</span><a href="#" class="active">Lưỡi lục chì trên</a></p>

                    <div class="label">
                        <h4>Thương hiệu</h4>
                        <ul>
                            <li><a href="#" class="active">All</a></li>
                            <li><a href="#">Dasy</a></li>
                            <li><a href="#">Ryobi</a></li>
                            <li><a href="#">Okuma</a></li>
                            <li><a href="#">Shimano</a></li>
                            <li><a href="#">Shinoya</a></li>
                            <li><a href="#">Orther...</a></li>

                        </ul>
                    </div>
                    <div class="sort">
                        <div class="sort_left">
                            <label>Sắp xếp theo</label>
                            <select>
                                <option value="volvo">Giá tiền</option>
                                <option value="saab">Cao nhất</option>
                                <option value="mercedes">Thấp nhất</option>

                            </select>
                        </div>
                        <div class="count_page">
                            <p>Số sản phẩm mỗi trang : <a href="#" class="active">16</a><a href="#">32</a><a href="#">48</a></p>
                        </div>
                    </div>
                </div>

                <aside class="colRight">
                    @{ Html.RenderPartial("~/Views/Shared/Partial/Shopcart.cshtml"); }
                </aside>
                <div class="clear"></div>
                <div class="productsList">
                    @Html.Controls().ProductList(false)
                </div>

                <div class="frm2">
                    @Html.Controls().LastViewProduct(true)
                </div>
            </div>
            <div class="clear"></div>
            <footer>
                @{ Html.RenderPartial("~/Views/Shared/Partial/Footer.cshtml"); }
            </footer>
        </div>
        <!--end main-->
    </div>
    @RenderBody()
    @Html.JsBundle("~/js/page/product")
</body>
</html>
