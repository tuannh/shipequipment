@model ShipEquipment.Biz.Domain.Page
@using ShipEquipment.Core.Enumerations

@{
    Layout = "~/Views/Layouts/Content.cshtml";

    var pageType = ViewBag.PageType;
    var pageAlias = ViewBag.PageAlias;

    ViewBag.Title = Model != null ? Model.Title : "TuanHangXanh";

    if (pageType == PageType.Product)
    {
        ViewBag.PageType = PageType.Product;
        Layout = "~/Views/Layouts/Product.cshtml";
    }
}



@if (pageType == PageType.News)
{
    @Html.Controls().NewsList()
}
else if (pageType == PageType.NewsDetail)
{
    @Html.Controls().NewsDetail()
}
else if (pageType == PageType.UserGuide)
{
    @Html.Controls().UserGuide()
}
else if (pageType == PageType.UserGuideDetail)
{
    @Html.Controls().UserGuideDetail()
}
else if (pageType == PageType.ProductDetail)
{
    @Html.Controls().ProductDetail()
}
else if (pageType == PageType.FAQs)
{
    @Html.Controls().FaqList()
}
else if (pageType == PageType.Contact)
{
    @Html.Controls().Content(pageAlias as string)
}
else if (pageType == PageType.Shopcart)
{
    Html.RenderPartial("~/Views/Shared/Partial/MainCart .cshtml");
}
else if (pageType == PageType.Order)
{
    Html.RenderPartial("~/Views/Home/_Order.cshtml", ViewData["Order"] as Order, ViewData);
    @section FooterScripts    {
        @Html.JsBundle("~/js/jqueryval")
    }
}
else if (pageType == PageType.Promotion)
{
    Layout = "~/Views/Layouts/Promotion.cshtml";
    @Html.Controls().PromotionList()
}
else if (pageType == PageType.Video)
{
    @Html.Controls().VideoList()
    @Html.Controls().AlbumList()
}
else if (pageType == PageType.FishingContest)
{
    @Html.Controls().Content(pageAlias as string)
}
else if (pageType == PageType.AlbumDetail)
{
    @Html.Controls().AlbumDetail()
}







@section Styles{
    @if (pageType == PageType.Shopcart)
    {
        @Html.CssBundle("~/css/shopcart")
    }
    else if (pageType == PageType.Product)
    {
        @Html.CssBundle("~/css/product")
    }
    else if (pageType == PageType.Promotion)
    {
        @Html.CssBundle("~/css/promotion")
    }
    else
    {
        @Html.CssBundle("~/css/content")
    }
}