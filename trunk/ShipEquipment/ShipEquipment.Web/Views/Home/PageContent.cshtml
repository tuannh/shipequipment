@model ShipEquipment.Biz.Domain.Page
@using ShipEquipment.Core.Enumerations

@{
    Layout = "~/Views/Layouts/Content.cshtml";
    ViewBag.Title = "TuanHangXanh";

    ViewBag.IsUserGuideList = true;
    ViewBag.IsNewsList = true;

    var pageAlias = ViewBag.PageAlias;

    if (Model != null)
    {
        ViewBag.Title = Model.Title;
    }

    if (string.Compare(pageAlias, "tin-tuc", true) == 0)
    {
        ViewBag.PageType = PageType.News;
    }
    else if (string.Compare(pageAlias, "chi-tiet-tin", true) == 0)
    {
        ViewBag.PageType = PageType.NewsDetail;
    }
    else if (string.Compare(pageAlias, "huong-dan", true) == 0)
    {
        ViewBag.PageType = PageType.UserGuide;
    }
    else if (string.Compare(pageAlias, "chi-tiet-huong-dan", true) == 0)
    {
        ViewBag.PageType = PageType.UserGuideDetail;
    }
    else if (string.Compare(pageAlias, "chi-tiet-san-pham", true) == 0)
    {
        ViewBag.PageType = PageType.ProductDetail;
    }
    else if (string.Compare(pageAlias, "faqs", true) == 0)
    {
        ViewBag.PageType = PageType.FAQs;
    }
    else if (string.Compare(pageAlias, "lien-he", true) == 0)
    {
        ViewBag.PageType = PageType.Contact;
    }
    else if (string.Compare(pageAlias, "gio-hang", true) == 0)
    {
        ViewBag.PageType = PageType.Shopcart;
    }
    else if (string.Compare(pageAlias, "san-pham", true) == 0)
    {
        Layout = "~/Views/Layouts/Product.cshtml";
    }

    var pageType = ViewBag.PageType;
}

@if (pageType == PageType.News)
{
    @Html.Controls().NewsList()
}
else if (pageType == PageType.NewsDetail)
{
    @Html.Controls().NewsDetail()
}
else if (pageType == PageType.UserGuide)
{
    @Html.Controls().UserGuide()
}
else if (pageType == PageType.UserGuideDetail)
{
    @Html.Controls().UserGuideDetail()
}
else if (pageType == PageType.ProductDetail)
{
    @Html.Controls().ProductDetail()
}
else if (pageType == PageType.FAQs)
{
    @Html.Controls().FaqList()
}
else if (pageType == PageType.Contact)
{
    @Html.Controls().Content(pageAlias as string)
}
else if (pageType == PageType.Shopcart)
{
   @("Thông tin giỏ hàng")
}